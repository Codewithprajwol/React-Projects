{
  "compilerOptions": {
    "target": "ES6",                        
    "module": "esnext",                     
    "moduleResolution": "node",            
    "strict": true,                         
    "esModuleInterop": true,                
    "skipLibCheck": true,                  
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",                     
    "rootDir": "./src",                    
    "declaration": true,                   
    "allowJs": true,                       
    "checkJs": false,                      
    "jsx": "react-jsx",                    
    "resolveJsonModule": true,             
    "isolatedModules": true                
  },
  "include": [
    "src/**/*"                             
  ],
  "exclude": [
    "node_modules",                        
    "dist"                                 
  ]
}
